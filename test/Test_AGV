import cocotb
from cocotb.clock import Clock
from cocotb.triggers import ClockCycles

@cocotb.test()
async def test_my_module(dut):
    """Test for my_module.v"""
    dut._log.info("Starting test for my_module")

    # Create a 10 us clock
    clock = Clock(dut.clk, 10, units="us")
    cocotb.start_soon(clock.start())

    # Reset the module
    dut.rst_n.value = 0
    dut.ena.value = 1
    await ClockCycles(dut.clk, 5)
    dut.rst_n.value = 1

    # Apply inputs
    dut.ui_in.value = 12
    dut.uio_in.value = 8

    await ClockCycles(dut.clk, 1)

    # Check expected output
    assert dut.uo_out.value == 20, f"Output was {dut.uo_out.value}, expected 20"
